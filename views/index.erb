<h1>Welcome to Crouching Python B'n'B</h1>

<form action="/sign_out" method="get">
  <input type="submit" value="sign_out" />
</form>

<form action="/list_property" method="get">
  <input type="submit" value="List a Space" />
</form>

<ul>
<% @properties.each do |property| %>
<li id="<%= property.name %>">
<form action="/book_page_request" method="post">
  <input type="hidden" name="property_id" value="<%= property.id %>">
  <input type="submit" value="
  <%= property.name %>
  <%= property.description %>
  <%= property.price %>">
  </form>
</li>
<% end %>
</ul>
